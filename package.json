{
  "name": "@simple/tools",
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "description": "Simple Platform Tools",
  "license": "Apache-2.0",
  "prepare": "is-ci || npx simple-git-hooks",
  "engines": {
    "node": ">=25"
  },
  "scripts": {
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build": "turbo run build",
    "tidy": "turbo run tidy",
    "deps": "pnpm i && turbo run deps",
    "contextualizer": "contextualizer"
  },
  "dependencies": {
    "is-ci": "^4.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.7.3",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@simpleplatform/contextualizer": "1.0.5",
    "@typescript-eslint/parser": "8.53.1",
    "@typescript-eslint/typescript-estree": "8.53.1",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.2",
    "eslint-plugin-format": "1.3.1",
    "eslint-plugin-perfectionist": "5.4.0",
    "globals": "17.2.0",
    "lint-staged": "16.2.7",
    "simple-git-hooks": "2.13.1",
    "turbo": "2.7.5",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": "eslint --fix",
    "packages/scl_parser/**/*.{ex,exs}": [
      "bash -c \"cd packages/scl_parser && mix credo --strict\""
    ],
    "tools/contextualizer/**/*.go": [
      "bash -c \"cd tools/contextualizer && golangci-lint run ./...\""
    ],
    "tools/simple-cli/**/*.go": [
      "bash -c \"cd tools/simple-cli && golangci-lint run ./...\""
    ],
    "tools/scl_parser_cli/**/*.{ex,exs}": [
      "bash -c \"cd tools/scl_parser_cli && mix credo --strict\""
    ]
  }
}
